{
  "expo": {
    "name": "Storytime For Kids",
    "slug": "storytime-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/new-logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icons/new-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#fbf8f7"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.moluno.storytimemobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/new-logo.png",
        "backgroundColor": "#fbf8f7"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": ["android.permission.RECORD_AUDIO"],
      "package": "com.moluno.storytimemobile"
    },
    "web": {
      "favicon": "./assets/icons/new-logo.png"
    },
    "plugins": [
      "expo-font",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "Allow StoryTime4Kids to access your microphone."
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.974734791862-8epj0p0bokvin0fgiv4fs8rdn5mbonv4"
        }
      ],
      "expo-asset"
    ]
  }
}
